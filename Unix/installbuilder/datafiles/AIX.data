%Variables
ROOT_GROUP_NAME: 'system'
pam_dir_passwd:  'auth required /usr/lib/security/pam_aix\naccount required /usr/lib/security/pam_aix'
pam_file_passwd: 'omi auth required /usr/lib/security/pam_aix\nomi account required /usr/lib/security/pam_aix'

%Directories
/usr/lpp; 755; root; ${{ROOT_GROUP_NAME}}; sysdir
/usr/lpp/omi.rte; 755; root; ${{ROOT_GROUP_NAME}}

%OmiService_funcs
StopOmiService() {
    if [ -f /var/opt/omi/run/omiserver.pid ]; then
        stopsrc -c -s omiserverd
    fi
}

RemoveOmiService() {
    rmssys -s omiserverd
    rmitab omiserverd
}

%Preinstall_10
#include OmiService_funcs
RemoveOmiService > /dev/null 2>&1

%Preupgrade_10
#include OmiService_funcs
StopOmiService

%Preupgrade_20
RemoveOmiService

%Postinstall_40
mkssys -s omiserverd -p /opt/omi/bin/omiserver -u root -S -n 15 -f 9 -G omi
grep omiserverd /etc/inittab > /dev/null 2>&1
if [ $? -eq 0 ]; then
    rmitab omiserverd
fi
mkitab 'omiserverd:2:once:/usr/bin/startsrc -s omiserverd -e "LD_LIBRARY_PATH=/opt/omi/lib" > /dev/console 2>&1'

%Preuninstall_10
#include OmiService_funcs
StopOmiService
RemoveOmiService
